                                    <DataGridTextColumn
                                        Header="Target Viewport Setting"
                                        Binding="{Binding ViewportColor}" />
                                    <DataGridTextColumn
                                        Header="Source Viewport Setting"
                                        Binding="{Binding SourceViewportColor}" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <!--Conflict Count-->
                            <TextBlock
                                Grid.Row="1"
                                Margin="5 5 0 5"
                                VerticalAlignment="Center"
                                Text="{Binding ViewportColorConflictsCount}"
                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                FontSize="{StaticResource FontSizeBase}" />
                            <!--Buttons bar-->
                            <Border
                                Grid.Row="2"
                                BorderBrush="Black"
                                BorderThickness="0 1 0 0">
                                <!--Buttons-->
                                <StackPanel
                                    Orientation="Horizontal">
                                    <!--Fix All Button-->
                                    <Button
                                        Style="{StaticResource HighlightingIconButton}"
                                        Margin="0"
                                        Width="210"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        Command="{Binding ResolveViewportColorConflictsCommand}"
                                        ToolTip="Attempt to resolve all color viewport overrides that conflict with the same viewport on the source drawing.">
                                        <!--Button Icon and Text-->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <StackPanel
                                                Grid.Row="1"
                                                HorizontalAlignment="Stretch">
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Text="{StaticResource FontAwesomeGlobe}"
                                                    FontSize="{StaticResource FontSizeSubTitle}"
                                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                                    Foreground="{StaticResource PrimaryBlueBrush}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Text="Resolve all color viewport override conflicts"
                                                    TextWrapping="WrapWithOverflow"
                                                    Margin="0"
                                                    FontSize="{StaticResource FontSizeCaption}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center" />
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                    <!--Fix Selected Button-->
                                    <Button
                                        Style="{StaticResource HighlightingIconButton}"
                                        Margin="0"
                                        Width="210"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        CommandParameter="{Binding SelectedViewportConflict}"
                                        Command="{Binding ResolveSelectedViewportConflictCommand}"
                                        ToolTip="Attempt to resolve the selected color viewport overrides that conflict with the same viewport on the source drawing.">
                                        <!--Button Icon and Text-->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <StackPanel
                                                Grid.Row="1"
                                                HorizontalAlignment="Stretch">
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Text="{StaticResource FontAwesomeWrench}"
                                                    FontSize="{StaticResource FontSizeSubTitle}"
                                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                                    Foreground="{StaticResource PrimaryBlueBrush}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Text="Resolve selected color viewport override conflicts"
                                                    TextWrapping="Wrap"
                                                    Margin="0"
                                                    FontSize="{StaticResource FontSizeCaption}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center" />
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>

                    </TabItem>
                    <!--Viewport Linetype Conflicts-->
                    <TabItem
                        Header="Viewport Linetype">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="75" />
                            </Grid.RowDefinitions>
                            <!--Viewport Linetype Conflict Grid-->
                            <DataGrid
                                Grid.Row="0"
                                VirtualizingStackPanel.IsVirtualizing="True"
                                AutoGenerateColumns="False"
                                Margin="20 10 0 0"
                                Style="{StaticResource MMDataGrid}"
                                ItemsSource="{Binding ViewportLinetypeConflictLayers}"
                                SelectedItem="{Binding SelectedViewportConflict}"
                                GridLinesVisibility="None"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                IsReadOnly="True"
                                FontSize="{StaticResource FontSizeLarge}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Header="Drawing"
                                        Binding="{Binding DrawingPath}" />
                                    <DataGridTextColumn
                                        Header="Viewport Layer"
                                        Binding="{Binding ViewportLayer}" />
                                    <DataGridTextColumn
                                        Header="Layer Name"
                                        Binding="{Binding Name}" />
                                    <DataGridTextColumn
                                        Header="Target Viewport Setting"
                                        Binding="{Binding ViewportLinetype}" />
                                    <DataGridTextColumn
                                        Header="Source Viewport Setting"
                                        Binding="{Binding SourceViewportLinetype}" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <!--Conflict Count-->
                            <TextBlock
                                Grid.Row="1"
                                Margin="5 5 0 5"
                                VerticalAlignment="Center"
                                Text="{Binding ViewportLinetypeConflictsCount}"
                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                FontSize="{StaticResource FontSizeBase}" />
                            <!--Buttons bar-->
                            <Border
                                Grid.Row="2"
                                BorderBrush="Black"
                                BorderThickness="0 1 0 0">
                                <!--Buttons-->
                                <StackPanel
                                    Orientation="Horizontal">
                                    <!--Fix All Button-->
                                    <Button
                                        Style="{StaticResource HighlightingIconButton}"
                                        Margin="0"
                                        Width="210"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        Command="{Binding ResolveViewportLinetypeConflictsCommand}"
                                        ToolTip="Attempt to resolve all linetype viewport overrides that conflict with the same viewport on the source drawing.">
                                        <!--Button Icon and Text-->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <StackPanel
                                                Grid.Row="1"
                                                HorizontalAlignment="Stretch">
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Text="{StaticResource FontAwesomeGlobe}"
                                                    FontSize="{StaticResource FontSizeSubTitle}"
                                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                                    Foreground="{StaticResource PrimaryBlueBrush}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Text="Resolve all linetype viewport override conflicts"
                                                    TextWrapping="WrapWithOverflow"
                                                    Margin="0"
                                                    FontSize="{StaticResource FontSizeCaption}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center" />
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                    <!--Fix Selected Button-->
                                    <Button
                                        Style="{StaticResource HighlightingIconButton}"
                                        Margin="0"
                                        Width="210"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        CommandParameter="{Binding SelectedViewportConflict}"
                                        Command="{Binding ResolveSelectedViewportConflictCommand}"
                                        ToolTip="Attempt to resolve the selected linetype viewport overrides that conflict with the same viewport on the source drawing.">
                                        <!--Button Icon and Text-->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <StackPanel
                                                Grid.Row="1"
                                                HorizontalAlignment="Stretch">
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Text="{StaticResource FontAwesomeWrench}"
                                                    FontSize="{StaticResource FontSizeSubTitle}"
                                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                                    Foreground="{StaticResource PrimaryBlueBrush}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Text="Resolve selected linetype viewport override conflicts"
                                                    TextWrapping="Wrap"
                                                    Margin="0"
                                                    FontSize="{StaticResource FontSizeCaption}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Center" />
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>

                    </TabItem>
                    <!--Viewport Lineweight Conflicts-->
                    <TabItem
                        Header="Viewport Lineweight">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="75" />
                            </Grid.RowDefinitions>
                            <!--Viewport Lineweight Conflicts Grid-->
                            <DataGrid
                                Grid.Row="0"
                                VirtualizingStackPanel.IsVirtualizing="True"
                                AutoGenerateColumns="False"
                                Margin="20 10 0 0"
                                Style="{StaticResource MMDataGrid}"
                                ItemsSource="{Binding ViewportLineweightConflictLayers}"
                                SelectedItem="{Binding SelectedViewportConflict}"
                                GridLinesVisibility="None"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                IsReadOnly="True"
                                FontSize="{StaticResource FontSizeLarge}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Header="Drawing"
                                        Binding="{Binding DrawingPath}" />
                                    <DataGridTextColumn
