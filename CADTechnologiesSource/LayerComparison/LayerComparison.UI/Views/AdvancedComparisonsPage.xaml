                                        HorizontalAlignment="Stretch"
                                        Command="{Binding ResolveViewportLineweightConflictsCommand}"
                                        ToolTip="Attempt to resolve all lineweight viewport overrides that conflict with the same viewport on the source drawing.">
                                        <!--Button Icon and Text-->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <StackPanel
                                                Grid.Row="1"
                                                HorizontalAlignment="Stretch">
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Text="{StaticResource FontAwesomeGlobe}"
                                                    FontSize="{StaticResource FontSizeSubTitle}"
                                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                                    Foreground="{StaticResource PrimaryBlueBrush}"
                                                    VerticalAlignment="Bottom"
