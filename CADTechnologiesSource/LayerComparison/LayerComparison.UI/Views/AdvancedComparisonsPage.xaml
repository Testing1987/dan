                                        Binding="{Binding SourceViewportLineweight}" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <!--Conflict Count-->
                            <TextBlock
                                Grid.Row="1"
                                Margin="5 5 0 5"
                                VerticalAlignment="Center"
                                Text="{Binding ViewportLineweightConflictsCount}"
                                FontFamily="{StaticResource SegoeUI_SemiBold}"
