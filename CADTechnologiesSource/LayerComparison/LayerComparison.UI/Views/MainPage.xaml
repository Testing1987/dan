<Base:BasePage
    x:Class="LayerComparison.UI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LayerComparison.UI.Views"
    xmlns:Base="clr-namespace:CADTechnologiesSource.LayerComparison.UI.Base"
    xmlns:LayerComparisonCoreViewModels="clr-namespace:LayerComparison.Core.ViewModels;assembly=LayerComparison.Core"
    xmlns:tempviews ="clr-namespace:LayerComparison.UI.Views.temp"
    mc:Ignorable="d"
    d:DesignHeight="540"
    d:DesignWidth="1000">

    <!--Create References To Styles-->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/CADTechnologiesSource.UIResources;component/Styles/Colors.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/CADTechnologiesSource.UIResources;component/Styles/Buttons.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/CADTechnologiesSource.UIResources;component/Styles/FontAwesomeStrings.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/CADTechnologiesSource.UIResources;component/Styles/Fonts.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/CADTechnologiesSource.UIResources;component/Styles/DataGrids.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/CADTechnologiesSource.UIResources;component/Styles/TabControls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!--Main Parent-->
    <Grid
        DataContext="{x:Static LayerComparisonCoreViewModels:MainPageViewModel.Instance}"
        Background="{StaticResource DarkBackgroundBrush}">
        <!--Main Page Grid Layout-->
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <!--Title Bar and Back Button-->
        <Border
            Grid.Row="0"
            Height="75"
            BorderBrush="Black"
            BorderThickness="0 0 0 1">
            <StackPanel
                Orientation="Horizontal">
                <!--Back Button-->
                <Button
                    Style="{StaticResource HighlightingIconButton}"
                    Margin="0"
                    Width="100"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Command="{Binding BackCommand}"
                    ToolTip="Return to the Start Page.">
                    <!--Button Icon and Text-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Stretch">
                            <TextBlock
                                Grid.Row="0"
                                Text="{StaticResource FontAwesomeHomeIcon}"
                                FontSize="{StaticResource FontSizeSubTitle}"
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Foreground="{StaticResource PrimaryBlueBrush}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center" />
                            <TextBlock
                                Grid.Row="1"
                                Text="Start Page"
                                Margin="0"
                                FontSize="{StaticResource FontSizeCaption}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Button>
                <!--Advanced Comparisons Button-->
                <Button
                    Style="{StaticResource HighlightingIconButton}"
                    Margin="0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Command="{Binding NavigateToAdvancedCommand}"
                    ToolTip="Show advanced comparisons.">
                    <!--Button Icon and Text-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Stretch">
                            <TextBlock
                                Grid.Row="0"
                                Text="{StaticResource FontAwesomeMagic}"
                                FontSize="{StaticResource FontSizeSubTitle}"
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Foreground="{StaticResource PrimaryBlueBrush}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center" />
                            <TextBlock
                                Grid.Row="1"
                                Text="Advanced Comparisons"
                                Margin="0"
                                FontSize="{StaticResource FontSizeCaption}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>

        <!--Tab Control-->
        <TabControl
            Grid.Row="1"
            Style="{StaticResource MainTabControlStyle}"
            SelectedIndex="{Binding MainPageTabIndex}">
            <!--Style Tab-->
            <TabItem
                Header="Style">
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Source drawing text and path-->
                        <RowDefinition
                            Height="Auto" />
                        <!--Listview of target drawings-->
                        <RowDefinition
                            Height="*" />
                        <!--Buttons-->
                        <RowDefinition
                            Height="75" />
                    </Grid.RowDefinitions>
                    <!--Textblocks for source drawing and path-->
                    <StackPanel
                        Grid.Row="0"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="20 10 0 10"
                            VerticalAlignment="Bottom"
                            Foreground="{StaticResource PrimaryBlueBrush}"
                            Background="{StaticResource DarkBackgroundBrush}"
                            Text="Source drawing: "
                            FontFamily="{StaticResource SegoeUI_SemiBold}"
                            FontSize="{StaticResource FontSizeLarge}" />
                        <TextBlock
                            Margin="3 10 0 10"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource DarkBackgroundBrush}"
                            Text="{Binding SourceDrawing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            FontFamily="{StaticResource SegoeUI_SemiBold}"
                            FontSize="{StaticResource FontSizeBase}" />
                    </StackPanel>
                    <!--Style listview that displays target drawings-->
                    <ScrollViewer
                        VerticalScrollBarVisibility="Auto"
                        Grid.Row="1">
                        <ListView
                            Margin="20 0 0 0"
                            BorderBrush="Transparent"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding TargetDrawings, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            SelectedItem="{Binding SelectedTargetDrawing, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <ListView.Template>
                                <ControlTemplate>
                                    <ItemsPresenter />
                                </ControlTemplate>
                            </ListView.Template>
                        </ListView>


                    </ScrollViewer>
                    <!--Style Buttons-->
                    <Border
                        BorderBrush="Black"
                        BorderThickness="0 1 0 0"
                        Grid.Row="2">
                        <!--Buttons Stackpanel-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="*" />
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Orientation="Horizontal">
                                <!--Set Source Button-->
                                <Button
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Width="100"
                                    Height="75"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding SetSourceDrawingCommand}"
                                    ToolTip="Select the drawing used as the basis of the layer style. Target drawings will be compared against this source..">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0 0 0 5"
                                                Text="{StaticResource FontAwesomeRocket}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Set source"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <!--Add Drawings Button-->
                                <Button
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Height="75"
                                    Width="100"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding AddTargetDrawingCommand}"
                                    ToolTip="Add drawings to this comparison.">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0 0 0 5"
                                                Text="{StaticResource FontAwesomePlus}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Add targets"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <!--Remove Drawings Button-->
                                <Button
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Height="75"
                                    Width="100"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding RemoveTargetDrawingCommand}"
                                    ToolTip="Remove drawings from this comparison.">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0 0 0 5"
                                                Text="{StaticResource FontAwesomeMinus}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Remove targets"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <!--Open Target Button-->
                                <Button
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Height="75"
                                    Width="100"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding OpenSelectedTargetDrawingCommand}"
                                    ToolTip="Opens the selected target drawing.">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Margin="0 0 0 5"
                                                Grid.Row="0"
                                                Text="{StaticResource FontAwesomeOpen}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Open target"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <!--Save Comparison Button-->
                                <Button
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Height="75"
                                    Width="100"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding SaveCommand}"
                                    ToolTip="Saves the comparison.">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Margin="0 0 0 5"
                                                Grid.Row="0"
                                                Text="{StaticResource FontAwesomeSave}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Save comparison"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>

                            </StackPanel>
                            <!--Reconcile Layers Button-->
                            <Button
                                Grid.Column="2"
                                Style="{StaticResource HighlightingIconButton}"
                                Margin="0"
                                Height="75"
                                Width="100"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                Command="{Binding LayerReconcileCommand}"
                                ToolTip="Reconcile all layers in the source drawing and all target drawings.">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition
                                            Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel
                                        Grid.Row="1"
                                        HorizontalAlignment="Stretch">
                                        <TextBlock
                                            Margin="0 0 0 5"
                                            Grid.Row="0"
                                            Text="{StaticResource FontAwesomeSave}"
                                            FontSize="{StaticResource FontSizeSubTitle}"
                                            FontFamily="{StaticResource FontAwesomeSolid}"
                                            Foreground="{StaticResource PrimaryBlueBrush}"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Center" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Text="Reconcile Layers"
                                            Margin="0"
                                            FontFamily="{StaticResource SegoeUI_SemiBold}"
                                            FontSize="{StaticResource FontSizeCaption}"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Center" />
                                    </StackPanel>
                                </Grid>
                            </Button>

                            <!--Apply Visretain Button-->
                            <Button
                                Grid.Column="3"
                                Style="{StaticResource HighlightingIconButton}"
                                Margin="0"
                                Height="75"
                                Width="100"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                Command="{Binding VisretainCommand}"
                                ToolTip="Turns ON Visretain on the target drawings.">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition
                                            Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel
                                        Grid.Row="1"
                                        HorizontalAlignment="Stretch">
                                        <TextBlock
                                            Margin="0 0 0 5"
                                            Grid.Row="0"
                                            Text="{StaticResource FontAwesomeSave}"
                                            FontSize="{StaticResource FontSizeSubTitle}"
                                            FontFamily="{StaticResource FontAwesomeSolid}"
                                            Foreground="{StaticResource PrimaryBlueBrush}"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Center" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Text="Apply Visretain"
                                            Margin="0"
                                            FontFamily="{StaticResource SegoeUI_SemiBold}"
                                            FontSize="{StaticResource FontSizeCaption}"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Center" />
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!--Review Tab-->
            <TabItem
                Header="Review And Compare">
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Info Text-->
                        <RowDefinition
                            Height="Auto" />
                        <!--Datagrid-->
                        <RowDefinition
                            Height="*" />
                        <!--Buttons-->
                        <RowDefinition
                            Height="75" />
                    </Grid.RowDefinitions>
                    
                    <!--Textblocks for source drawing and path-->
                    <StackPanel
                        Grid.Row="1"
                        Orientation="Horizontal">
                    </StackPanel>

                    <!--Style Review Grid--><!--
                    <ScrollViewer Grid.Row="1" HorizontalAlignment="Left" VerticalScrollBarVisibility="Hidden">
                        <tempviews:LayerItemList />
                    </ScrollViewer>-->
                    
                    <DataGrid
                        VirtualizingStackPanel.IsVirtualizing="True"
                        AutoGenerateColumns="False"
                        Grid.Row="1"
                        Margin="0 10 0 0"
                        Style="{StaticResource MMDataGrid}"
                        ItemsSource="{Binding SourceDrawingLayers}"
                        GridLinesVisibility="None"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        IsReadOnly="True"
                        FontSize="16">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Header="Layer Name"
                                Binding="{Binding Name}" />
                            <DataGridTextColumn
                                Header="On"
                                Binding="{Binding OnOff}" />
                            <DataGridTextColumn
                                Header="Freeze"
                                Binding="{Binding Freeze}" />
                            <DataGridTextColumn
                                Header="Color"
                                Binding="{Binding Color}" />
                            <DataGridTextColumn
                                Header="Linetype"
                                Binding="{Binding Linetype}" />
                            <DataGridTextColumn
                                Header="Lineweight"
                                Binding="{Binding Lineweight}" />
                            <DataGridTextColumn
                                Header="Transparency"
                                Binding="{Binding Transparency}" />
                            <DataGridTextColumn
                                Header="Plot"
                                Binding="{Binding Plot}" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!--Buttons-->
                    <Border
                        Grid.Row="2"
                        BorderBrush="Black"
                        BorderThickness="0 1 0 0">
                        <!--Review Tab Buttons-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="*" />
                                <ColumnDefinition
                                    Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Orientation="Horizontal">
                                <!--Back Button-->
                                <!--<Button
                                    Grid.Column="1"
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Height="75"
                                    Width="100"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Right"
                                    Command="{Binding NavigateToStyleCommand}"
                                    ToolTip="Go to the previous step.">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Margin="0 0 0 5"
                                                Grid.Row="0"
                                                Text="{StaticResource FontAwesomeArrowLeft}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Back"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>-->
                                <!--Reload Style Button-->
                                <Button
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Width="100"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Left"
                                    Command="{Binding ReviewLayerStyleCommand}"
                                    ToolTip="Reload the source drawing and display the layer settings.">
                                    <!--Button Icon and Text-->
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Grid.Row="0"
                                                Text="{StaticResource FontAwesomeLayerGroup}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Reload style"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <!--Open Source Button-->
                                <Button
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Height="75"
                                    Width="100"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding OpenSourceDrawingCommand}"
                                    ToolTip="Opens the source drawing.">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Margin="0 0 0 5"
                                                Grid.Row="0"
                                                Text="{StaticResource FontAwesomeOpen}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Open source"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <!--Compare Button-->
                                <Button
                                    Style="{StaticResource HighlightingIconButton}"
                                    Margin="0"
                                    Height="75"
                                    Width="100"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Left"
                                    Command="{Binding CompareCommand}"
                                    ToolTip="Compares all target drawings to the source drawing and produces a conflict report.">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition
                                                Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch">
                                            <TextBlock
                                                Margin="0 0 0 5"
                                                Grid.Row="0"
                                                Text="{StaticResource FontAwesomeCopy}"
                                                FontSize="{StaticResource FontSizeSubTitle}"
                                                FontFamily="{StaticResource FontAwesomeSolid}"
                                                Foreground="{StaticResource PrimaryBlueBrush}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Text="Compare"
                                                Margin="0"
                                                FontFamily="{StaticResource SegoeUI_SemiBold}"
                                                FontSize="{StaticResource FontSizeCaption}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </StackPanel>

                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!--Conflicts By Type Tab-->
            <TabItem
                Header="Conflicts">
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Info Text-->
                        <RowDefinition
                            Height="Auto" />
                        <!--Datagrid-->
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <!--Textblocks for source drawing and path-->
                    <StackPanel
                        Grid.Row="0"
                        Orientation="Horizontal">
                    </StackPanel>

                    <!--Conflicts By Type Table Control-->
                    <TabControl
                        Style="{StaticResource MainTabControlStyle}"
                        Grid.Row="1"
                        Margin="0 10 0 0"
                        SelectedIndex="{Binding SelectedConflictTabIndex}">
                        <TabControl.Resources>
                            <Style
                                TargetType="{x:Type TabPanel}">
                                <Setter
                                    Property="HorizontalAlignment"
                                    Value="Center" />
                            </Style>
                        </TabControl.Resources>

                        <!--On/Off Conflict Report -->
                        <TabItem
                            Header="On/Off">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="*" />
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="75" />
                                </Grid.RowDefinitions>

                                <!--On/Off Conflict Grid-->
                                <DataGrid
                                    Grid.Row="0"
                                    VirtualizingStackPanel.IsVirtualizing="True"
                                    AutoGenerateColumns="False"
                                    Margin="20 10 0 0"
                                    Style="{StaticResource MMDataGrid}"
                                    ItemsSource="{Binding OnOffConflictLayers}"
                                    SelectedItem="{Binding SelectedConflict}"
                                    GridLinesVisibility="None"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    IsReadOnly="True"
                                    FontSize="{StaticResource FontSizeLarge}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Header="Drawing Path"
                                            Binding="{Binding DrawingPath}" />
                                        <DataGridTextColumn
                                            Header="Layer Name"
                                            Binding="{Binding Name}" />
                                        <DataGridTextColumn
                                            Header="Drawing Setting"
                                            Binding="{Binding OnOff}" />
                                        <DataGridTextColumn
                                            Header="Source Setting"
                                            Binding="{Binding SourceOnOff}" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!--Conflict Count-->
                                <TextBlock
                                    Grid.Row="1"
                                    Margin="5 5 0 5"
                                    VerticalAlignment="Center"
                                    Text="{Binding OnOffConflictsCount}"
                                    FontFamily="{StaticResource SegoeUI_SemiBold}"
                                    FontSize="{StaticResource FontSizeBase}" />

                                <!--Buttons bar-->
                                <Border
                                    Grid.Row="2"
                                    BorderBrush="Black"
                                    BorderThickness="0 1 0 0">
                                    <!--Buttons-->
