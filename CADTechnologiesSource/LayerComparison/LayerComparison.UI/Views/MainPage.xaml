                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="*" />
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="75" />
                                </Grid.RowDefinitions>
                                <!--Plot conflicts Data grid-->
                                <DataGrid
                                    Grid.Row="0"
                                    VirtualizingStackPanel.IsVirtualizing="True"
                                    AutoGenerateColumns="False"
                                    Margin="20 10 0 0"
                                    Style="{StaticResource MMDataGrid}"
                                    ItemsSource="{Binding PlotConflictLayers}"
                                    SelectedItem="{Binding SelectedConflict}"
                                    GridLinesVisibility="None"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    IsReadOnly="True"
                                    FontSize="{StaticResource FontSizeLarge}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Header="Drawing Path"
                                            Binding="{Binding DrawingPath}" />
                                        <DataGridTextColumn
                                            Header="Layer Name"
                                            Binding="{Binding Name}" />
                                        <DataGridTextColumn
                                            Header="Drawing Setting"
                                            Binding="{Binding Plot}" />
                                        <DataGridTextColumn
                                            Header="Source Setting"
                                            Binding="{Binding SourcePlot}" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!--Conflict Count-->
                                <TextBlock
                                    Grid.Row="1"
                                    Margin="5 5 0 5"
                                    VerticalAlignment="Center"
                                    Text="{Binding PlotConflictsCount}"
                                    FontFamily="{StaticResource SegoeUI_SemiBold}"
                                    FontSize="{StaticResource FontSizeBase}" />

                                <!--Buttons bar-->
                                <Border
                                    Grid.Row="2"
                                    BorderBrush="Black"
                                    BorderThickness="0 1 0 0">
                                    <!--Buttons-->
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <!--Fix All Button-->
                                        <Button
                                            Style="{StaticResource HighlightingIconButton}"
                                            Margin="0"
                                            Width="210"
                                            VerticalAlignment="Stretch"
                                            HorizontalAlignment="Stretch"
                                            Command="{Binding ResolvePlotConflictsCommand}"
                                            ToolTip="Attempt to resolve all layer plot settings that conflict with the source drawing.">
                                            <!--Button Icon and Text-->
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition
                                                        Height="Auto" />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <StackPanel
                                                    Grid.Row="1"
                                                    HorizontalAlignment="Stretch">
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Text="{StaticResource FontAwesomeGlobe}"
                                                        FontSize="{StaticResource FontSizeSubTitle}"
                                                        FontFamily="{StaticResource FontAwesomeSolid}"
                                                        Foreground="{StaticResource PrimaryBlueBrush}"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Center" />
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Text="Resolve all plot conflicts"
                                                        Margin="0"
                                                        FontSize="{StaticResource FontSizeCaption}"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Center" />
                                                </StackPanel>
                                            </Grid>
                                        </Button>

                                        <!--Fix Selected Button-->
                                        <Button
                                            Style="{StaticResource HighlightingIconButton}"
                                            Margin="0"
                                            Width="210"
                                            VerticalAlignment="Stretch"
                                            HorizontalAlignment="Stretch"
                                            CommandParameter="{Binding SelectedConflict}"
                                            Command="{Binding ResolveSelectedConflictCommand}"
                                            ToolTip="Attempt to resolve layer plot settings on the selected items that conflict with the source drawing.">
                                            <!--Button Icon and Text-->
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition
                                                        Height="Auto" />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <StackPanel
                                                    Grid.Row="1"
                                                    HorizontalAlignment="Stretch">
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Text="{StaticResource FontAwesomeWrench}"
                                                        FontSize="{StaticResource FontSizeSubTitle}"
                                                        FontFamily="{StaticResource FontAwesomeSolid}"
                                                        Foreground="{StaticResource PrimaryBlueBrush}"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Center" />
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Text="Resolve selected plot conflicts"
                                                        Margin="0"
                                                        FontSize="{StaticResource FontSizeCaption}"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Center" />
                                                </StackPanel>
                                            </Grid>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Grid>

                        </TabItem>

                        <!--Extra Layers Conflict Report-->
                        <TabItem
                            Header="Extra Layers">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="*" />
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="75" />
                                </Grid.RowDefinitions>
                                <!--Extra layers conflicts Data grid-->
                                <DataGrid
                                    Grid.Row="0"
                                    VirtualizingStackPanel.IsVirtualizing="True"
                                    AutoGenerateColumns="False"
                                    Margin="20 10 0 0"
                                    Style="{StaticResource MMDataGrid}"
                                    ItemsSource="{Binding ExtraLayers}"
                                    GridLinesVisibility="None"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    IsReadOnly="True"
                                    FontSize="{StaticResource FontSizeLarge}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Header="Drawing Path"
                                            Binding="{Binding DrawingPath}" />
                                        <DataGridTextColumn
                                            Header="Extra Layer Name"
                                            Binding="{Binding Name}" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!--Conflict Count-->
                                <TextBlock
                                    Grid.Row="1"
                                    Margin="5 5 0 5"
                                    VerticalAlignment="Center"
                                    Text="{Binding ExtraLayersCount}"
                                    FontFamily="{StaticResource SegoeUI_SemiBold}"
                                    FontSize="{StaticResource FontSizeBase}" />

                                <!--Buttons bar-->
                                <Border
                                    Grid.Row="2"
                                    BorderBrush="Black"
                                    BorderThickness="0 1 0 0">
                                    <!--Buttons-->
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="10 0 0 0"
                                            VerticalAlignment="Center"
                                            Text="Extra layer issues cannot be fixed automatically. Please review the drawings and take the appropriate action." />
                                    </StackPanel>
                                </Border>
                            </Grid>

                        </TabItem>

                        <!--Missing Layers Conflict Report ***DISABLED BECAUSE ITS SLOW***-->
                        <TabItem
                            Header="Missing Layers">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="*" />
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="75" />
                                </Grid.RowDefinitions>

                                <!--MIssing layers conflicts Data grid-->

                                <DataGrid
                                    Grid.Row="0"
                                    VirtualizingStackPanel.IsVirtualizing="True"
                                    AutoGenerateColumns="False"
                                    Margin="20 10 0 0"
                                    Style="{StaticResource MMDataGrid}"
                                    ItemsSource="{Binding MissingLayers}"
                                    GridLinesVisibility="None"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    IsReadOnly="True"
                                    FontSize="{StaticResource FontSizeLarge}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Header="Layer Name"
                                            Binding="{Binding SourceLayerName}" />
                                        <DataGridTextColumn
                                            Header="Missing From"
                                            Binding="{Binding TargetDrawingPath}" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!--Conflict Count-->

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="5 5 0 5"
                                    VerticalAlignment="Center"
                                    Text="{Binding MissingLayersCount}"
                                    FontFamily="{StaticResource SegoeUI_SemiBold}"
                                    FontSize="{StaticResource FontSizeBase}" />

                                <!--Buttons bar-->

                                <Border
                                    Grid.Row="2"
                                    BorderBrush="Black"
                                    BorderThickness="0 1 0 0">

                                    <!--Buttons-->

                                    <StackPanel
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="10 0 0 0"
                                            VerticalAlignment="Center"
                                            Text="Missing layer issues cannot be fixed automatically. Please review the drawings and take the appropriate action." />
                                    </StackPanel>
                                </Border>
                            </Grid>

                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Base:BasePage>
